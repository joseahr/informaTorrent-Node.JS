div(style={'width':'100%','padding': '0px', 'margin-top':'20px'}).container.content
	if(user)
		div(style={'border-radius':'0px'}).well
			h4 Añade un comentario
			form(action="/app/denuncia/#{denuncia.gid}/addComentario", method="post")
				.form-group
					textarea(name="contenido" rows='3' style={'height':'250px'}).form-control
				button.btn.btn-primary(type='submit') Añadir
	div.page-header
		h2 Comentarios
	-var index = 0;
	if denuncia.comentarios
		each coment in denuncia.comentarios
			.row
				.testimonials
					.active.item
						div(style={'background':'#f8f8f8 ', 'border-top-left-radius':'20px'}).carousel-info
							img.pull-left(alt='', src='#{coment.profile.picture}')
							.pull-left
								span.testimonials-name #{coment.profile.username}
								span.testimonials-post #{coment.fecha}
							.pull-right
								span # #{denuncia.comentarios.length - (index++)}
						hr(style={'margin': '0 auto'})
						blockquote.quote
							div(style={color:'#666', 'word-wrap':'break-word'}) !{coment.contenido}
			br