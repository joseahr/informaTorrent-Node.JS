		//
		script.
			$(function(){
			
				$('[data-toggle="tab"]').popover({
				    trigger: 'hover',
				    'placement': 'top'
				});
			
			
			
				// Para que no se cierre el menÃº de inicio
				$('.dropdown').on('hide.bs.dropdown', function () {
				    return false;
				});
				
				$('#sign').on('mouseover',function(){
					$('.dropdown').addClass('open');
					//foo = true;
				}).on('mouseout', function(e){
					if($(e.target).is('input')){
						$('.dropdown').addClass('open');
						//alert('fooo');
					}
					else {
						//alert('baaar');
						$('.dropdown').removeClass('open');
						//foo = false;
					}
				});
				
				//
				var aux = false;
				function addClass(){
					
					$('#menuapp').addClass('goToTop');
					$('.navbar-brand, .navbar-nav > li >  a').addClass('goToTop2');
					$('.top-shadow').css({'display':'block'});
					if(!aux){
						$('.navbar-brand').fadeOut(500, function(){
							$(this).html("<i style='color:#ffbb00;font-size:65px;' class='fa fa-bullhorn'/>"+
							"  <i style='color:#00bbff;font-size:65px' class='fa fa-exclamation'/>").fadeIn(500);
						});
						aux = true;
					}
				}
				function removeClass(){
					$('#menuapp').removeClass('goToTop');
					$('.navbar-brand, .navbar-nav > li > a').removeClass('goToTop2');
					$('.top-shadow').css({'display':'none'});
					if(aux){
						$('.navbar-brand').fadeOut(0, function(){
							$(this).html("informaTorrent!").fadeIn(500);
						});
						aux = false;
					}
				}
				// NAVBAR
				var navHeight = $("#imgheader").height();
				($(window).scrollTop() > navHeight) ? addClass() : removeClass();
				// Cuando accedemos desde url#scroll
				$(window).bind('scroll', function() {
					var navHeight = $("#imgheader").height();
					($(window).scrollTop() > navHeight) ? addClass() : removeClass();
				});
			
				//TEXTAREA WYSIWYG EDITOR
				$("textarea").sceditor({
					plugins: "xhtml",
					style: "/editor/minified/jquery.sceditor.default.min.css",
					emoticonsRoot: '/editor/'
				});
			
			
				if('#{message}' != undefined)
				{
					//alert('#{message}');
					msg_error = '#{message.error}';
					msg_success = '#{message.success}';
					msg_info = '#{message.info}';
					//alert(msg_error + msg_success + msg_info);
					if(msg_error || msg_success || msg_info)
					{
						var type = undefined;
						var title = '';
						var msg = '';
						
						if (msg_error){
							title = 'Error';
							type = BootstrapDialog.TYPE_DANGER;
							msg = msg_error;
						}
						if (msg_success){ 
							title = 'Completado';
							type = BootstrapDialog.TYPE_SUCCESS;
							msg = msg_success;
						}
						if (msg_info){ 
							title = 'Info';
							type = BootstrapDialog.TYPE_INFO;
							msg = msg_info;
						}
						if (type)
							BootstrapDialog.show({
								type: type,
								title: title,
								message: msg,
								buttons: [{
								label: 'Cerrar',
								action: function(dialog){dialog.close();}}]
							}); 			
					}
				}
			});
