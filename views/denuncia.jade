				title: 'Esta denuncia le gusta a...',
				message: likes_html,
				buttons: [{label: 'Cerrar', action: function(d){d.close();}}],
				onshown: function(){
					$('[data-toggle="bottom"]').popover({
						trigger: 'hover',
						placement: 'bottom'
					});
				}
			});
		};
		
